<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!--设置到System.Properties-->
    <settings>
        <property name="mano.json.converter.class">com.diosay.tplib.FastJsonConverter</property>
        <property name="mano.service.config.dir">{mano.dir}/conf/service</property>
    </settings>
    <dependency>
        <!--type=jar|classes|url-->
        <!--<path type="jar" recursive="false">{mano.dir}/lib</path>-->
    </dependency>
    <!--日志-->
    <logging>
        <category>default</category>
        <handler class="mano.logging.ConsoleHandler">
            <!--<property name="formatter.class">mano.logging.SimpleFormatter</property>-->
            <!--<property name="path">{mano.dir}/log</property>-->
        </handler>
        <level>
            <infoEnabled>true</infoEnabled>
            <debugEnabled>true</debugEnabled>
            <warnEnabled>true</warnEnabled>
            <errorEnabled>true</errorEnabled>
            <fatalEnabled>true</fatalEnabled>
            <traceEnabled>true</traceEnabled>
        </level>
    </logging>
</configuration>